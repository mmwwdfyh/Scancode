/* pages/authorization/authorization.wxss */
.wraper{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.wraper_user{
  width: 80%;
  height: 30vh;
  border-bottom: 2rpx solid #ccc;
  display: flex; 
  align-items: center;
}
.wraper_user open-data:nth-of-type(1){
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
  vertical-align: middle;
}
.wraper_user open-data:nth-of-type(2){
    height: 100rpx;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
}
.wraper_title{
  width: 80%;
  height: 40vw;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
} 
.wraper_button{
  width: 100%;
  margin-top: 20vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wraper_button view:nth-of-type(1){
  width: 80%;
  height: 6.2vh;
  border-radius: 70rpx;
  background-color: #0089FE;
  color: #ffffff;
  text-align: center;
}
.buttonfyh{
  border: none !important;
  color: #ffffff !important;
}
.wraper_button view:nth-of-type(2){
  width: 80%;
  height: 6.2vh;
  border-radius: 70rpx;
  color: #0089FE;
  line-height: 6.2vh;
  text-align: center;
  margin-top: 5vw;
  border: 1rpx solid #0089FE;
}