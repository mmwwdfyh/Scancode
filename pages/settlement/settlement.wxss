/* pages/settlement/settlement.wxss */
.wrap {
  background-color: #F9F9F9;
  width: 100%;
  height: 100%;
  position: absolute;
}

.shangpin {
  display: flex;
  justify-content: space-between;
  padding-top: 3vw;
  background-color: #ffffff;
  height: 20vw;
}

.shangpin view:nth-of-type(2) {
  color: red;
}

.wrap_title {
  height: 25vw;
  background-color: #ffffff;
  margin-bottom: 1vw;
}

.shu {
  float: right;
  margin-top: -5vw;
}

.shangpinshu {
  height: 15vw;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.yue {
  width: 100%;
  height: 20vw;
  background-color: #ffffff;
  margin-top: 2vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hong {
  color: red;
}

.tishi {
  display: flex;
  margin: 10vw auto;
  justify-content: center;
}

.footer {
  background-color: #ffffff;
  height: 15vw;
  line-height: 15vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.footer view:nth-of-type(1) {
  display: flex;
}

.zhif {
  width: 30vw;
  height: 15vw;
  line-height: 15vw;
  text-align: center;
  color: #ffffff;
  background-color: #FFA72B;
}