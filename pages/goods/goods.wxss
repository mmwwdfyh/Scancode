/* pages/ption/ption.wxss */
.ption_pin{
  width: 100%;
  height: 32vw;
  border-bottom: 1rpx solid #dddddd;
  position: relative;
}
.guigg{
  color: #cccccc;
  margin-top: 20rpx;
}
.nong{
  margin-top: 20rpx;
}
.jiage{
  margin-top: 20rpx;
  color: red;
}
.shuliang{
  width: 44vw;
  display: flex;
  justify-content: space-around;
  position: absolute;
  right: 4rpx;
  bottom: 6rpx;
}
.shuliang view:nth-of-type(1){
  width: 10vw;
  height: 10vw;
  border: 1rpx solid #FFA72B;
  background-color: #ffffff;
  color: #FFA72B;
  border-radius: 50%;
  line-height: 10vw;
  text-align: center;
}
.shuliang view:nth-of-type(2){
  width: 20vw;
  border: 1rpx solid #FFA72B;
  background-color: #ffffff;
  text-align: center;
  line-height: 10vw;
  border-radius: 36rpx;
}
.shuliang view:nth-of-type(3){
  width: 10vw;
  height: 10vw;
  line-height: 10vw;
  border: 1rpx solid #FFA72B;
  background-color: #FFA72B;
  border-radius: 50%;
  text-align: center;
  color: #ffffff;
}
.bootm{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
